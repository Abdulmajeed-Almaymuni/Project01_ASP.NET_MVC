@{
    ViewData["Title"] = "Authors";
    List<Author> authors = (List<Author>)ViewData["Authors"];
}

<h1>Authors</h1>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col" class="align-items-center">Number of Books written</th>
            <th scope="col">About</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in authors)
        {
            <tr>
                <th scope="row" class="align-middle">@author.Id</th>
                <td class="align-middle">@author.Name</td>
                <td class="align-middle">@author.BooksWritten</td>
                <td class="align-middle"><a href="Authors/details/@author.Id" class="btn btn-warning">View</a></td>
            </tr>
        }
    </tbody>


</table>