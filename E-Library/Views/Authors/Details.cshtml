@{
    ViewData["Title"] = "Author Details";
    Author author = ViewBag.author;
}


@if (author != null)
{
    <h1>Author details</h1>
    <div class="row border border-secondary border-5 rounded-3 col-6 offset-md-2" style="margin-top: 100px;">
        <div class="col" style="margin-top: 10px; margin-bottom: 10px;">
            <h3>@author.Name</h3>
            <br />
            <p>Books written: @author.BooksWritten</p>
            <p>About: @author.About</p>
            <a href="/Authors" class="btn btn-primary">Go Back!</a>
        </div>
    </div>
}
else
{
    <h1>Author Does not exist!</h1>
    <a href="/Authors" class="btn btn-primary">Go Back!</a>
}


